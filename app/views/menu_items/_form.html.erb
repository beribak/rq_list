<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1><%= @menu_item.persisted? ? "Edit Menu Item" : "New Menu Item" %></h1>
      <p class="text-muted">
        Menu: <%= @section.menu.name %> â€º Section: <%= @section.name %>
      </p>

      <%= simple_form_for [@section, @menu_item] do |f| %>
        <%= f.input :name, 
            label: "Item Name",
            placeholder: "e.g., Caesar Salad, Grilled Salmon",
            input_html: { class: "form-control" } %>
        
        <%= f.input :description, 
            label: "Description (optional)",
            as: :text,
            placeholder: "Describe the dish, ingredients, etc.",
            input_html: { rows: 3, class: "form-control" } %>

        <%= f.input :price,
            label: "Price",
            placeholder: "0.00",
            input_html: { class: "form-control", step: "0.01" } %>

        <%= f.input :position,
            label: "Position",
            hint: "Order in which this item appears (lower numbers appear first)",
            input_html: { class: "form-control" } %>

        <div class="d-flex gap-2 mt-4">
          <%= f.button :submit, class: "btn btn-primary" %>
          <%= link_to "Cancel", menu_path(@section.menu), class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
