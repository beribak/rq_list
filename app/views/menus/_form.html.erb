<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1><%= @menu.persisted? ? "Edit Menu" : "New Menu" %></h1>

      <%= simple_form_for @menu do |f| %>
        <%= f.input :name, 
            label: "Menu Name",
            placeholder: "e.g., Dinner Menu, Lunch Specials",
            input_html: { class: "form-control" } %>
        
        <%= f.input :description, 
            label: "Description",
            as: :text,
            placeholder: "Describe your menu...",
            input_html: { rows: 4, class: "form-control" } %>

        <div class="d-flex gap-2 mt-4">
          <%= f.button :submit, class: "btn btn-primary" %>
          <%= link_to "Cancel", @menu.persisted? ? menu_path(@menu) : menus_path, class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
