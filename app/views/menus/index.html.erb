<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>My Menus</h1>
    <%= link_to new_menu_path, class: "btn-icon btn-icon-add" do %>
      <i class="bi bi-plus-lg"></i>
      <span>Create New Menu</span>
    <% end %>
  </div>

  <% if @menus.any? %>
    <div class="row">
      <% @menus.each do |menu| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100 menu-card">
            <%= link_to menu_path(menu), class: "text-decoration-none" do %>
              <div class="card-body">
                <h5 class="card-title text-dark"><%= menu.name %></h5>
                <p class="card-text text-muted"><%= truncate(menu.description, length: 100) %></p>
                <p class="text-muted small">
                  <i class="bi bi-layout-text-sidebar"></i> <%= menu.sections.count %> sections
                </p>
              </div>
            <% end %>
            <div class="card-footer bg-transparent">
              <div class="d-flex gap-2 flex-nowrap">
                <%= link_to edit_menu_path(menu), class: "btn-icon" do %>
                  <i class="bi bi-pencil"></i>
                <% end %>
                <%= button_to menu_path(menu), method: :delete, 
                    data: { turbo_confirm: "Are you sure you want to delete this menu?" }, 
                    class: "btn-icon btn-icon-danger" do %>
                  <i class="bi bi-trash"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info">
      <p class="mb-0">You haven't created any menus yet. <%= link_to "Create your first menu", new_menu_path, class: "alert-link" %>!</p>
    </div>
  <% end %>
</div>
