<div class="container mt-5">
  <div class="text-center mb-5">
    <h1 class="display-4 mb-3"><%= t('home.title') %></h1>
    <p class="lead text-muted"><%= t('home.subtitle') %></p>
  </div>

  <div class="row justify-content-center g-4">
    <div class="col-md-5">
      <div class="card h-100 shadow-sm hover-card">
        <div class="card-body text-center p-5">
          <div class="mb-4">
            <i class="bi bi-menu-button-wide display-1 text-primary"></i>
          </div>
          <h2 class="card-title mb-3"><%= t('home.restaurant_menus.title') %></h2>
          <p class="card-text text-muted mb-4">
            <%= t('home.restaurant_menus.description') %>
          </p>
          <%= link_to t('home.restaurant_menus.button'), menus_path, class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    </div>

    <div class="col-md-5">
      <div class="card h-100 shadow-sm hover-card">
        <div class="card-body text-center p-5">
          <div class="mb-4">
            <i class="bi bi-images display-1 text-success"></i>
          </div>
          <h2 class="card-title mb-3"><%= t('home.galleries.title') %></h2>
          <p class="card-text text-muted mb-4">
            <%= t('home.galleries.description') %>
          </p>
          <button class="btn btn-outline-secondary btn-lg" disabled><%= t('home.galleries.button') %></button>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .hover-card {
    transition: transform 0.2s ease-in-out;
  }
  .hover-card:hover {
    transform: translateY(-5px);
  }
</style>
