<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1><%= @section.persisted? ? "Edit Section" : "New Section" %></h1>
      <p class="text-muted">Menu: <%= @menu.name %></p>

      <%= simple_form_for [@menu, @section] do |f| %>
        <%= f.input :name, 
            label: "Section Name",
            placeholder: "e.g., Appetizers, Main Courses, Desserts",
            input_html: { class: "form-control" } %>
        
        <%= f.input :description, 
            label: "Description (optional)",
            as: :text,
            placeholder: "Describe this section...",
            input_html: { rows: 3, class: "form-control" } %>

        <%= f.input :position,
            label: "Position",
            hint: "Order in which this section appears (lower numbers appear first)",
            input_html: { class: "form-control" } %>

        <div class="d-flex gap-2 mt-4">
          <%= f.button :submit, class: "btn btn-primary" %>
          <%= link_to "Cancel", menu_path(@menu), class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
